<%= render 'admin/layouts/application' %>
<div class="content inner-page">
	<div class="container">
		<% if @subscription_plan.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@subscription_plan.errors.count, "error") %> prohibited this subscription_plan from being saved:</h2>
			<ul>
				<% @subscription_plan.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<div class="row">
			<h4><span><%= image_tag("line.png" , :alt => 'line.png') %></span>New Plan Page<span><%= image_tag("right.png" , :alt => 'right.png') %></span></h4>
			<span class="q1">Company will add new employee to their team on this page.</span>
			<%= form_tag '/admin/subscription_plans/create', {:class => 'form-horizontal add-employee' , :id => 'loginForm'} do %>
			<div class="form-group">
				<%= label_tag :plan_name, 'Plan Name', :class => "control-label col-sm-2" %>
				<div class="col-sm-7">
					<%= text_field_tag :plan_name, nil, :class => 'form-control', :placeholder => 'Enter Plan Name', :required => 'required' %>
				</div>
			</div>
			<div class="form-group">
				<%= label_tag :plan_type, 'Plan Type', :class => "control-label col-sm-2", :required => 'required' %>
				<!-- <div class="col-sm-7">
					<%#= text_field_tag :plan_type, nil, :class => 'form-control', :placeholder => 'Enter Plan Details' %>
				</div> -->
				<div class="col-sm-7">
					<select name="plan_type" class="form-control" required="required">
						<option value="">Select Type</option>
						<option value="1">Monthly</option>
						<option value="2">Quaterly</option>
						<option value="3">Yearly</option>
					</select>
				</div>
			</div>
			<div class="form-group">
				<%= label_tag :plan_price, 'Plan Price', :class => "control-label col-sm-2" %>
				<div class="col-sm-7">
					<%= text_field_tag :plan_price, nil, class:'form-control', :placeholder => 'Enter Plan Price', :required => 'required' %>
				</div>
			</div>
			<div class="form-group">
				<%= label_tag :total_profiles, 'Total Profiles', :class => "control-label col-sm-2" %>
				<div class="col-sm-7">
					<%= text_field_tag :total_profiles, nil, class:'form-control', :placeholder => 'No of profiles allowed', :required => 'required' %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= submit_tag "Add Plan", :class => 'btn btn-default' %>
					<a href="/admin/subscription_plans/" class="btn btn-default">Cancel</a>
				</div>
			</div>
			
			<% end %>
		</div>
	</div>
	
</div>

<script type="text/javascript">
$(document).ready(function () {
  $("#loginForm").validate();  
});
</script> 

<%= render 'admin/layouts/footer' %>

