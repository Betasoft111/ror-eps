<div class="content inner-page">
	<div class="content-down"></div>
<div class="container">
<% flash.each do |name, msg| %>
      <div class="">
        <h4 align="center" class="flash"><%= content_tag :div, msg, :id => "flash_#{name}" %>
        </h4>
      </div>
    <% end %>
<div class="row">
	<h4><span>
		<%= image_tag("line.png" , :alt => 'line.png') %>
		</span>Subscription Plan List<span><%= image_tag("right.png" , :alt => 'right.png') %></span></h4>
		<span class="q1"><a class="add-new" href="/admin/subscription_plans/new" > Add New</a>
		</span>
		
		<div class="table-responsive">
			<table class="table">
				<thead>
					<tr>
						<th>Name</th>
						<th>Plan Type</th>
						<th>Plan Price</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<% @plans.each do |plan| %>
					<tr>
						<td><%= plan.plan_name %></td>
						<td><% if plan.plan_type == 1 %>Monthly<% elsif plan.plan_type == 2 %>Quaterly<% else plan.plan_type == 3 %>Yearly<% end %></td>
						<td><%= plan.plan_price %></td>
						<td><a class="edit" href="/admin/subscription_plans/<%= plan.id %>/edit"></a> <a class="delete" href="/admin/subscription_plans/delete/<%= plan.id %>"></a></td>						
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
</div>
<%= render 'admin/layouts/footer' %>