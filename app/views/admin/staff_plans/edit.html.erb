
<%= render 'admin/layouts/application' %>
<div class="content inner-page">
	<div class="container">
		<% if @staff_plan && @staff_plan.id != nil %>
		<div class="row">
			<h4><span><%= image_tag("line.png" , :alt => 'line.png') %></span>Edit Plan Details<span><%= image_tag("right.png" , :alt => 'right.png') %></span></h4>
			<span class="q1">Company will Edit  Staff Plan on this page.</span>
			<%= form_tag @staff_path, {:class => 'form-horizontal add-employee'} do %>
			<div class="form-group">
				<%= label_tag :plan_name, 'Plan Name', :class => "control-label col-sm-2" %>
				<div class="col-sm-7">
					<%= text_field_tag :plan_name, @staff_plan.plan_name, :class => 'form-control', :placeholder => 'Enter Plan Name', :required => 'required' %>
				</div>
			</div>
			<div class="form-group">
				<%= label_tag :no_of_staff, 'No Of Staff', :class => "control-label col-sm-2", :required => 'required' %>
				<div class="col-sm-7">
					<%= text_field_tag :no_of_staff, @staff_plan.no_of_staff, :class => 'form-control', :placeholder => 'Enter No Of Staff', :required => 'required' %>
				</div>
			</div>
			<div class="form-group">
				<%= label_tag :plan_price, 'Plan Price', :class => "control-label col-sm-2" %>
				<div class="col-sm-7">
					<%= text_field_tag :plan_price,  @staff_plan.plan_price, class:'form-control', :placeholder => 'Enter Plan Price', :required => 'required' %>
					<input type="hidden" name="id" value="<%= @staff_plan.id %>">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= submit_tag "Update Plan", :class => 'btn btn-default' %>
				</div>
			</div>
			<% end %>
			
		</div>
		<% else %>
		<h2>Please select a valid plan to edit</h2>
		<% end %>
	</div>
	
</div>
<%= render 'admin/layouts/footer' %>