<%= render 'admin/layouts/application' %>
<div class="content inner-page">
	<div class="content-down"></div>
	<div class="container">
<% flash.each do |name, msg| %>
      <div class="">
        <h4 align="center" class="flash"><%= content_tag :div, msg, :id => "flash_#{name}" %>
        </h4>
      </div>
    <% end %>		
		<% if @staff_plans.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@staff_plans.errors.count, "error") %> prohibited this staff_plans from being saved:</h2>
			<ul>
				<% @staff_plans.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<div class="row">
			<h4><span><%= image_tag("line.png" , :alt => 'line.png') %></span>New Plan Page<span><%= image_tag("right.png" , :alt => 'right.png') %></span></h4>
			<span class="q1">Company will add new employee to their team on this page.</span>
			<%= form_tag '/admin/staff_plans/create', {:class => 'form-horizontal add-employee' , :id => 'loginForm'} do %>
			<div class="form-group">
				<%= label_tag :plan_name, 'Plan Name', :class => "control-label col-sm-2" %>
				<div class="col-sm-7">
					<%= text_field_tag :plan_name, nil, :class => 'form-control', :placeholder => 'Enter Plan Name', :required => 'required' %>
				</div>
			</div>
			<div class="form-group">
				<%= label_tag :no_of_staff, ' No Of Staff', :class => "control-label col-sm-2", :required => 'required' %>
				<div class="col-sm-7">
					<%= text_field_tag :no_of_staff, nil, :class => 'form-control', :placeholder => 'Enter No Of Staff', :required => 'required' %>
				</div>
				
			</div>
			<div class="form-group">
				<%= label_tag :plan_price, 'Plan Price', :class => "control-label col-sm-2" %>
				<div class="col-sm-7">
					<%= text_field_tag :plan_price, nil, class:'form-control', :placeholder => 'Enter Plan Price', :required => 'required' %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= submit_tag "Add Plan", :class => 'btn btn-default' %>
					<a href="/admin/staff_plans/" class="btn btn-default">Cancel</a>
				</div>
			</div>
			<% end %>
			
		</div>
	</div>
	
</div>

<script type="text/javascript">
$(document).ready(function () {
  $("#loginForm").validate();  
});
</script> 
<%= render 'admin/layouts/footer' %>