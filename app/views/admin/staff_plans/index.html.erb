<div class="content inner-page">
<div class="container">
	    <% flash.each do |name, msg| %>
      <div class="">
        <h4 align="center" class="flash"><%= content_tag :div, msg, :id => "flash_#{name}" %>
        </h4>
      </div>
    <% end %>
<div class="row">
	<h4><span>
		<%= image_tag("line.png" , :alt => 'line.png') %>
		</span>Company Staffing Plans <span><%= image_tag("right.png" , :alt => 'right.png') %></span></h4>
		<span class="q1">This will be the Staff plans page  for admin after login
		</span>
		<a class="add-new" href="/admin/staff_plans/new" > Add New</a>
		<div class="table-responsive">
			<table class="table">
				<thead>
					<tr>
						<th>Name</th>
						<th>Plan Type</th>
						<th>Plan Price</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<% @plans.each do |plan| %>
					<tr>
						<td><%= plan.plan_name %></td>
						<td><%= plan.no_of_staff %></td>
						<td><%= plan.plan_price %></td>
						<td><a class="edit" href="/admin/staff_plans/<%= plan.id %>/edit"></a> <a class="delete" href="/admin/staff_plans/delete/<%= plan.id %>"></a></td>						
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
</div>
<%= render 'admin/layouts/footer' %>