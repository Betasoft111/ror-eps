<%= render 'admin/layouts/application' %>
<div class="content inner-page">
	<div class="container">
		
		<div class="row">
			<h4><span><%= image_tag("line.png" , :alt => 'line.png') %></span>Add Qualification Page<span><%= image_tag("right.png" , :alt => 'right.png') %></span></h4>
			<span class="q1">admin will add new Qualifications.</span>
			<%= form_tag  admin_qualifications_add_path, {:class => 'form-horizontal add-employee' , :id => 'loginForm'} do %>
			<div class="form-group">
				<%= label_tag :qualification, 'Qualification', :class => "control-label col-sm-2" %>
				<div class="col-sm-7">
					<%= text_field_tag :qualification, nil, :class => 'form-control', :placeholder => 'Enter Qualifications Title', :required => 'required' %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= submit_tag "Add Qualification", :class => 'btn btn-default' %>
					<a href="/admin/skills/" class="btn btn-default">Cancel</a>
				</div>
			</div>
			
			<% end %>
		</div>
	</div>
	
</div>

<script type="text/javascript">
$(document).ready(function () {
  $("#loginForm").validate();  
});
</script> 

<%= render 'admin/layouts/footer' %>


