<%#= debug @userdata.email %>

      <div class="row">
        <h4><span><%= image_tag("line.png" , :alt => 'line.png') %></span>Contact User<span>
        <%= image_tag("right.png" , :alt => 'right.png') %>
      </span></h4>
  	  <form id="editStaff" class="form-horizontal add-employee" action="/admin/message/<%=  @userdata.id %>/Send" method="POST">

        <div class="form-group">
        <div class="col-lg-6">
        <p style="
    width: 20%;
    float: left;
">To :</p>
