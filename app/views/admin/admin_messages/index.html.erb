      </div>
      <div class="col-lg-6">
        <%= label_tag :message_data, 'Message Data', :class => "control-label col-sm-3", :required => 'required' %>
        <div class="col-sm-9">
          <textarea name="message_data" ></textarea>
        </div>
      </div>
      </div>
      
      <input type="hidden" name="message_to" value="<%=  @userdata.id %>">

      <div class="form-group">
        <div class="col-sm-10">
